<?xml version="1.0" encoding="utf-8"?>
<s:GridItemEditor xmlns:fx="http://ns.adobe.com/mxml/2009"
				  xmlns:s="library://ns.adobe.com/flex/spark"
				  xmlns:mx="library://ns.adobe.com/flex/mx"
				  width="421" height="65">
	<fx:Script>
		<![CDATA[
			
			private var file:File = new File();
			
			override public function set value(newValue:Object):void{
				textInput.text = newValue.toString();
			}
			
			override public function get value():Object{
				return textInput.text;
			}
			
			override public function setFocus():void{
				textInput.setFocus();
			}
			
			protected function button1_clickHandler(event:MouseEvent):void{
				file.browseForDirectory("select a directory");
				//TODO
				file.addEventListener(Event.SELECT,dirSelected);
			}
			
			protected function dirSelected(event:Event):void{
				this.value = event.target.nativePath;
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:TextInput id="textInput" left="0" top="0" bottom="0" right="50"/>
	<s:Button click="button1_clickHandler(event)" width="50" right="0" top="0" bottom="0" label="&gt;"/>
</s:GridItemEditor>
